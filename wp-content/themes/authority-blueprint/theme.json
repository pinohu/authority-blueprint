{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        { "slug": "primary", "color": "#0073aa", "name": "Primary" },
        { "slug": "background", "color": "#ffffff", "name": "Background" },
        { "slug": "foreground", "color": "#222222", "name": "Foreground" },
        { "slug": "accent", "color": "#f8f9fa", "name": "Accent" }
      ],
      "custom": false,
      "customGradient": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
          "slug": "system-ui",
          "name": "System UI"
        }
      ],
      "fontSizes": [
        { "slug": "small", "size": "0.95rem", "name": "Small" },
        { "slug": "normal", "size": "1.125rem", "name": "Normal" },
        { "slug": "large", "size": "2rem", "name": "Large" },
        { "slug": "x-large", "size": "2.5rem", "name": "Extra Large" }
      ],
      "customFontSize": false,
      "customLineHeight": false
    },
    "spacing": {
      "spacingScale": {
        "steps": 6,
        "mediumStep": 1.5
      },
      "customPadding": true,
      "customMargin": true
    },
    "layout": {
      "contentSize": "48rem",
      "wideSize": "64rem"
    },
    "custom": {
      "mobileFirst": true
    }
  },
  "styles": {
    "color": {
      "background": "#ffffff",
      "text": "#222222"
    },
    "typography": {
      "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
      "fontSize": "1.125rem"
    },
    "spacing": {
      "padding": {
        "top": "1.5rem",
        "bottom": "1.5rem"
      }
    }
  }
} 